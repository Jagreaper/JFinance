<UserControl x:Class="JFinance.Windows.WPF.Views.ThemeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JFinance.Windows.WPF.Views"
             xmlns:selectors="clr-namespace:JFinance.Windows.WPF.Selectors"
             xmlns:styles="clr-namespace:JFinance.Windows.WPF.Styles"
             xmlns:controls="clr-namespace:JFinance.Windows.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type styles:Theme}" x:Key="ThemeTemplate">
            <Button HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Width="130" Margin="0 3 0 3"
                    Command="{Binding ElementName=ListBox, Path=DataContext.SelectCommand}" CommandParameter="{Binding }"
                    Style="{StaticResource ButtonStyle}" FontSize="{StaticResource FontSizeL}" Padding="5 5">
                <Button.Content>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontSize="{StaticResource FontSizeL}" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Stroke="Black" StrokeThickness="1.15" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding AccentMainBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding AccentDarkBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding StrongBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding PrimaryBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding AlternativeBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding BackgroundBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Button.Content>
            </Button>
        </DataTemplate>

        <DataTemplate DataType="{x:Type styles:SystemTheme}" x:Key="SystemThemeTemplate">
            <Button HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Width="130" Margin="0 3 0 3" BorderThickness="0 0 0 0"
                    Command="{Binding ElementName=ListBox, Path=DataContext.SelectCommand}" CommandParameter="{Binding }"
                    Style="{StaticResource ButtonStyle}" FontSize="{StaticResource FontSizeL}" Padding="5 5">
                <Button.Content>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontSize="{StaticResource FontSizeL}" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Stroke="Black" StrokeThickness="1.15" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding AccentMainBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding AccentDarkBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding StrongBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding PrimaryBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding AlternativeBrush}"/>
                            <Rectangle Stroke="Black" Margin="0 0 2 0" Width="15" Height="15" Fill="{Binding BackgroundBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Button.Content>
            </Button>
        </DataTemplate>

        <selectors:ThemeDataTemplateSelector x:Key="ThemeDataTemplateSelector" ThemeTemplate="{StaticResource ThemeTemplate}"
                                             SystemThemeTemplate="{StaticResource SystemThemeTemplate}"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="0 10 0 5" FontSize="{StaticResource FontSizeL}" FontWeight="Bold" Text="Themes"/>
        
        <ListBox Grid.Row="1" x:Name="ListBox" Margin="0 5 0 5" BorderThickness="0" ItemsSource="{Binding Themes}" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 ItemTemplateSelector="{StaticResource ThemeDataTemplateSelector}" Background="Transparent">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <controls:PathButton Content="Save" FlowDirection="LeftToRight" Padding="10 5" BorderThickness="0 0 0 0"
                             FontSize="{StaticResource FontSizeL}" PathData="{StaticResource AddPath}" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
