<Window x:Class="JFinance.Windows.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JFinance.Windows.WPF.Views"
        xmlns:controls="clr-namespace:JFinance.Windows.WPF.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <controls:PathRadioButton Content="Home" FontSize="{StaticResource FontSizeL}"
							          PathData="{StaticResource HomePath}"
                                      FlowDirection="LeftToRight" IsChecked="True"
							          Padding="10 5" BorderThickness="0 4 0 0"
							          Command="{Binding NavigateCommand}" CommandParameter="NavigateHome"/>

            <controls:PathRadioButton Content="Summary" FontSize="{StaticResource FontSizeL}"
							          PathData="{StaticResource SummaryPath}"
                                      FlowDirection="LeftToRight" IsChecked="False"
							          Padding="10 5" BorderThickness="0 4 0 0"
							          Command="{Binding NavigateCommand}" CommandParameter="NavigateSummary"/>

            <controls:PathRadioButton Content="Themes" FontSize="{StaticResource FontSizeL}"
							          PathData="{StaticResource ThemePath}"
                                      FlowDirection="LeftToRight" IsChecked="False"
							          Padding="10 5" BorderThickness="0 4 0 0"
							          Command="{Binding NavigateCommand}" CommandParameter="NavigateThemes"/>
            
            <controls:PathRadioButton Content="Settings" FontSize="{StaticResource FontSizeL}"
							          PathData="{StaticResource SettingsPath}"
                                      FlowDirection="LeftToRight" IsChecked="False"
							          Padding="10 5" BorderThickness="0 4 0 0"
							          Command="{Binding NavigateCommand}" CommandParameter="NavigateSettings"/>
        </DockPanel>

        <ContentControl Grid.Row="1" Margin="0 10 0 0" Content="{Binding ContentControl}"/>
    </Grid>
</Window>
